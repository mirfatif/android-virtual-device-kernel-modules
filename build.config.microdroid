SRCARCH=${ARCH}
if [ "${ARCH}" = x86_64 ]; then
    SRCARCH=x86
fi

DEFCONFIG=microdroid_defconfig

SRC_CONFIG=${ROOT_DIR}/common-modules/virtual-device/microdroid_${ARCH}.defconfig
COPIED_CONFIG=${ROOT_DIR}/${KERNEL_DIR}/arch/${SRCARCH}/configs/${DEFCONFIG}

PRE_DEFCONFIG_CMDS="cp ${SRC_CONFIG} ${COPIED_CONFIG}"
POST_DEFCONFIG_CMDS="mv ${COPIED_CONFIG} ${SRC_CONFIG}"
