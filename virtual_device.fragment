# Drivers used by all Android virtual devices
CONFIG_BATTERY_GOLDFISH=m
CONFIG_BT_HCIVHCI=m
CONFIG_BT_HCIUART=m
CONFIG_CPUFREQ_DUMMY=m
CONFIG_CPUFREQ_VIRT=y
CONFIG_DMABUF_HEAPS_SYSTEM=m
CONFIG_DRM_VKMS=m
CONFIG_MAC80211_HWSIM=m
CONFIG_RTC_DRV_TEST=m
CONFIG_USB_DUMMY_HCD=m
CONFIG_VIRTIO_BALLOON=m
CONFIG_VIRTIO_PMEM=m
CONFIG_USBIP_CORE=m
CONFIG_USBIP_VHCI_HCD=m
# CFG80211 & MAC80211 as modules
CONFIG_CFG80211=m
CONFIG_NL80211_TESTMODE=y
# CONFIG_CFG80211_DEFAULT_PS is not set
# CONFIG_CFG80211_CRDA_SUPPORT is not set
CONFIG_MAC80211=m

# Drivers to run specific sanity tests
CONFIG_TEST_STACKINIT=m
CONFIG_TEST_MEMINIT=m

# Cuttlefish-specific drivers
CONFIG_VIRT_WIFI=m

# Auto-specific drivers
CONFIG_BT_HCIBTUSB=m
CONFIG_CAN_GS_USB=m
CONFIG_WLAN_VENDOR_MEDIATEK=y
CONFIG_MT76x0U=m
CONFIG_MT76x2U=m

# TV-specific drivers
CONFIG_USB_PULSE8_CEC=m
